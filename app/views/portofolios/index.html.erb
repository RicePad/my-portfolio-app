<h1>Portofolio</h1>

<%= link_to "Create portofolio", new_portofolio_path %>
<% @portofolio_items.each do |portofolio_item|%>
    <p><%= link_to portofolio_item.title, portofolio_path(portofolio_item.id) %></p>
    <p><%= portofolio_item.subtitle %></p>
    <p><%= portofolio_item.body %></p>
    <p><%= portofolio_item.main_image %></p>
    <p><%= image_tag  portofolio_item.thumb_image unless  portofolio_item.thumb_image.nil?    %></p>
    <%= link_to 'Destroy', portofolio_path(portofolio_item.id), method: :delete, data: { confirm: 'Are you sure?' } %>




<%end%>