
<%= form_for(@portofolio_item) do |f| %>
 <div class="container">
 <div class="row">
  
  <div class="col-md-6">

  <div class="form-group">
      <%= f.label :title%>
      <%= f.text_field :title, class: "form-control"%>

  </div>
  <br/>
  <div class="form-group">
       <%= f.label :subtitle%>
       <%= f.text_field :subtitle, class: "form-control"%>

  </div>
  <div class="form-group">
       <%= f.file_field :main_image %>
  </div>
  <div class="form-group">
       <%= f.file_field :thumb_image %>
  </div>
  
 </div>
   <br/>
 
 <div class="col-md-6">

  <div class="form-group">
       <%= f.label :body%>
       <%= f.text_area :body, class: "form-control", rows: 15%>
  </div>
 </div>
   <br/>
   <hr>
    <div class="col-md-12">
    <h2>Technolgies Used:</h2>

   <ul>
    <%= f.fields_for :technologies do |technologies_form| %> 
     <li>
       <%= technologies_form.label :name %>
       <%= technologies_form.text_field :name, class: "form-control"%>
     </li>
    <% end %>
   </ul>

  
  <div class="form-group">
      <%= f.submit "Submit", class: "btn btn-success btn-block" %>
  </div>
</div>  
  </div>
  </div>

<% end %>